<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/snackcoord"
    android:background="#ffffff"
    tools:context="in.siteurl.www.trendzcrm.TechSupport">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/header"
        android:background="#4C4C4C"/>

    <ScrollView
       android:layout_width="wrap_content"
       android:layout_marginTop="90dp"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <com.rengwuxian.materialedittext.MaterialEditText
               android:layout_width="match_parent"
               android:gravity="top"
               android:id="@+id/techSuppoSub"
               app:met_floatingLabel="highlight"
               app:met_floatingLabelText="Subject"
               android:layout_marginStart="12dp"
               android:layout_marginEnd="12dp"
               android:background="@drawable/neatlinebackground"
               android:layout_marginTop="45dp"
               android:inputType="textPersonName"
               android:hint="   Enter subject of query here. . ."
               android:layout_height="wrap_content"
               android:focusable="true"
               android:focusableInTouchMode="true"/>

           <com.rengwuxian.materialedittext.MaterialEditText
               android:layout_width="match_parent"
               android:layout_marginTop="135dp"
               android:id="@+id/techSuppoMsg"
               android:background="@drawable/neatlinebackground"
               android:inputType="textMultiLine"
               app:met_floatingLabel="highlight"
               android:layout_marginStart="12dp"
               android:layout_marginEnd="12dp"
               app:met_floatingLabelText="Message"
               android:hint="   Enter your query message here. . .\n\n\n\n\n\n\n"
               android:layout_height="180dp" />

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:text="Submit"
               android:textAllCaps="false"
               android:textColor="#000000"
               android:layout_marginBottom="72dp"
               android:textSize="18dp"
               android:onClick="finishGo"
               android:background="@drawable/btn_signin_background"
               android:layout_marginTop="351dp"/>
       </RelativeLayout>

   </ScrollView></android.support.design.widget.CoordinatorLayout>
