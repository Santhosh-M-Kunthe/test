<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff "
    tools:context="in.siteurl.www.trendzcrm.FlatDetails">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/header"
        android:background="#4C4C4C"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="Unit"
                android:textSize="18sp"
                android:layout_marginTop="9dp"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Name of unit"
                android:textSize="18sp"
                android:id="@+id/unitnName"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="#4b4b4d"
                android:layout_below="@+id/unitnName"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Size"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/unitnName"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/size"
                android:layout_below="@+id/unitnName"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/size"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Sale value"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/size"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/salval"
                android:layout_below="@+id/size"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/salval"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Balance"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/salval"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/balamnt"
                android:layout_below="@+id/salval"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/balamnt"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Recieved"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/balamnt"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/recamnt"
                android:layout_below="@+id/balamnt"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/recamnt"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Floor"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/recamnt"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/floor"
                android:layout_below="@+id/recamnt"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/floor"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Block"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/floor"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/block"
                android:layout_below="@+id/floor"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/block"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Project"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/block"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/project"
                android:layout_below="@+id/block"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/project"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Status"
                android:layout_marginBottom="54dp"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/project"
                android:layout_marginStart="18dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:text="30*40"
                android:textSize="18sp"
                android:id="@+id/status"
                android:layout_below="@+id/project"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp" />


            <View
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4b4b4d"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/status"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#c6942c"
        android:layout_alignParentBottom="true"
        android:layout_height="45dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/boticoncentor"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/boticoncentor">
            <Button
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:textColor="@color/primaryDarkColor"
                android:textAllCaps="false"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2.52dp"
                android:layout_marginBottom="2.52dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/alldocsunit"
                android:onClick="passFlatDocsToMyDocs"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flat related Documents"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:layout_marginEnd="9dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="9dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/boticoncentor"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent">
            <Button
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="2.52dp"
                android:layout_marginBottom="2.52dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/addtickettechsuppotype"
                android:layout_centerHorizontal="true"
                android:id="@+id/flattoat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/boticoncentor"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/boticoncentor"
            android:layout_alignParentLeft="true">
            <Button
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="2.52dp"
                android:layout_marginBottom="2.52dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/gobacksimon"
                android:onClick="finish" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go back"
                android:layout_centerHorizontal="true"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
